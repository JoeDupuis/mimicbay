<div class="game-layout">
  <div class="content">
    <div class="container">
      <h1 class="page-title"><%= @game.name %></h1>

      <div class="resource-section">
        <h2 class="title">Game Resources</h2>
        <div class="actions">
          <%= link_to "Areas", game_areas_path(@game), class: "btn btn-primary" %>
          <%= link_to "Characters", game_characters_path(@game), class: "btn btn-primary" %>
          <% if @game.creating? %>
            <%= link_to "Configure with AI", game_configuration_path(@game), class: "btn btn-primary" %>
          <% end %>
        </div>
      </div>

      <% if @game.creating? %>
        <div class="resource-section -highlighted">
          <p class="content">When you're ready to start playing:</p>
          <div class="actions">
            <%= button_to "Start Game", game_path(@game), method: :patch,
                params: { game: { state: "playing" } },
                class: "btn btn-success btn-lg" %>
          </div>
        </div>
      <% end %>

      <div class="game-controls">
        <div class="actions">
          <%= link_to "Game Control (Debug)", game_dm_path(@game), class: "btn btn-warning" %>
        </div>
      </div>

      <div class="mt-4">
        <%= link_to "Edit", edit_game_path(@game), class: "btn btn-outline-secondary btn-sm" %>
        <%= link_to "Back to Games", games_path, class: "btn btn-outline-dark btn-sm" %>
      </div>
    </div>
  </div>
</div>