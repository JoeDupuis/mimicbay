<div class="container">
  <div class="header">
    <h1>Characters for <%= @game.name %></h1>
    <%= link_to "New Character", new_game_character_path(@game), class: "btn btn-primary" %>
  </div>

  <% if @characters.any? %>
    <div class="characters-list">
      <% @characters.each do |character| %>
        <div class="character-item">
          <h3>
            <%= link_to character.name, game_character_path(@game, character) %>
            <% if character.is_player? %>
              <span class="badge">Player</span>
            <% end %>
          </h3>
          <p><%= character.description %></p>
          <div class="actions">
            <%= link_to "Edit", edit_game_character_path(@game, character), class: "btn btn-secondary" %>
            <%= button_to "Delete", game_character_path(@game, character), method: :delete, data: { turbo_confirm: "Are you sure?" }, class: "btn btn-danger" %>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <p>No characters yet. <%= link_to "Create the first character", new_game_character_path(@game) %></p>
  <% end %>

  <div class="navigation">
    <%= link_to "Back to Game", game_path(@game), class: "btn btn-secondary" %>
  </div>
</div>