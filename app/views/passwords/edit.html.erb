<div class="auth-layout">
  <div class="card">
    <h1 class="title">Update your password</h1>
    <p class="subtitle">Choose a strong password to secure your account</p>

    <% if flash[:alert] %>
      <div class="alert -error mb-3">
        <%= flash[:alert] %>
      </div>
    <% end %>

    <%= form_with url: password_path(params[:token]), method: :put, class: "auth-form" do |form| %>
      <div class="form-group">
        <%= form.label :password, "New Password", class: "label" %>
        <%= form.password_field :password,
            required: true,
            autocomplete: "new-password",
            placeholder: "Enter new password",
            maxlength: 72,
            class: "input" %>
      </div>

      <div class="form-group">
        <%= form.label :password_confirmation, "Confirm Password", class: "label" %>
        <%= form.password_field :password_confirmation,
            required: true,
            autocomplete: "new-password",
            placeholder: "Repeat new password",
            maxlength: 72,
            class: "input" %>
      </div>

      <div class="actions">
        <%= form.submit "Update Password", class: "submit btn btn-primary" %>
      </div>
    <% end %>

    <div class="auth-links">
      <%= link_to "Back to sign in", new_session_path, class: "link" %>
    </div>
  </div>
</div>
